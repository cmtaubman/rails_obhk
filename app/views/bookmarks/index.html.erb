<h1>This is the user's bookmarks page</h1>

<div class="container-fluid">

  <div id="home-opennow">

    <h3>OPEN BOTTLE NOW<br>
    HAPPY HOUR DEALS RIGHT NOW IN HK</h3>

    <div class="bar-home-row">

      <% @bookmarks.each do |elem| %>
        <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
          <div class="thumbnail">
          <% elem.each do |bookmark| %>
            <a href="bars/id"><img src=<%=bookmark.image%> alt=""></a>
            <span class="elem-name"><p><%= bookmark.name %></p></span>
            <span class="elem-location"><p><%= bookmark.location %></p></span>
            <span class="elem-deal"><p><%= bar.deal %></p></span>
            <span class="elem-bookmark">
              <button class ="elem-bookmark-btn" data-id=<%= bar.id%>>Bookmark this</button>
            </span>
          <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>